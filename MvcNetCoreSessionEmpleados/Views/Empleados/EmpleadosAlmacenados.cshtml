@{
    List<Empleado> empleados =
            Context.Session.GetObject<List<Empleado>>("EMPLEADOS");
}

@{
    ViewData["Title"] = "EmpleadosAlmacenados";
}

<h1>EmpleadosAlmacenados</h1>

<p>
    <a asp-controller="Empleados" asp-action="SessionEmpleados">Volver a almacenar empleados</a>
</p>
@if(empleados == null){
    <h2>No existen empleados en sesion</h2>
}else{
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Apellido
            </th>
            <th>
                Oficio
            </th>
            <th>
               Salario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Empleado item in empleados) {
        <tr>
            <td>
                @item.Apellido
            </td>
            <td>
                @item.Oficio
            </td>
            <td>
                @item.Salario
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
}
